{
    // See http://jshint.com/docs/ for more details

    "camelcase"     : true,    // true: Identifiers must be in camelCase
    "eqeqeq"        : true,     // true: Require triple equals (===) for comparison
    "indent"        : 4,        // {int} Number of spaces to use for indentation
    "latedef"       : false,    // true: Require variables/functions to be defined before being used
    "newcap"        : false,    // true: Require capitalization of all constructor functions e.g. `new F()`
    "plusplus"      : false,    // true: Prohibit use of `++` & `--`
    "quotmark"      : "single",    // Quotation mark consistency:
                                //   false    : do nothing (default)
                                //   true     : ensure whatever is used is consistent
                                //   "single" : require single quotes
                                //   "double" : require double quotes
    "undef"         : true,     // true: Require all non-global variables to be declared (prevents global leaks)
    "maxparams"     : 5,        // {int} Max number of formal params allowed per function
    "maxdepth"      : 4,        // {int} Max depth of nested blocks (within functions)
    "maxstatements" : false,    // {int} Max number statements per function - SR: Set to false if using RequireJS
    "maxcomplexity" : 5,        // {int} Max cyclomatic complexity per function - SR:  set to 5 intially
    "maxlen"        : 120,       // {int} Max number of characters per line
    "jquery"        : true,    // jQuery
    "node"          : true,    // Node.js

    // Custom Globals
    "globals"       : {
        "define" :  true,
        "window" :  true,
        "document" : true,
        "Image": true,
        "google": true,
        "Modernizr": true,
        "Imager": true,
        "module": true,
        "AZUtils": true,
        "enquire": true,
        "angular": true
    }
}
